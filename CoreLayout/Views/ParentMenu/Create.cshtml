@model CoreLayout.Models.UserManagement.ParentMenuModel
@{
    ViewData["Title"] = "Create";
}
<body >
    <div style="padding: 30px 30px 30px 30px">
        <h4 class="text-info">Create Parent Menu</h4>

        <form asp-action="Create" method="post">
            <div class="pd-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ParentMenuName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="ParentMenuName" class="form-control" />
                        <span asp-validation-for="ParentMenuName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="SortBy"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="SortBy" class="form-control" type="number" />
                        <span asp-validation-for="SortBy" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</body>
