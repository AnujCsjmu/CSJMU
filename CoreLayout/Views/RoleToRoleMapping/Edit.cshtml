@model CoreLayout.Models.UserManagement.RoleToRoleMappingModel
@{
    ViewData["Title"] = "Edit";
}
<!-- Page Header -->
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Edit RoleToRoleMapping</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">RoleToRoleMapping</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </div>

</div>
<!-- End Page Header -->
<!-- Conetnt Start-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                @*<div>
                        <h6 class="card-title mb-1">Edit State</h6>
                        <hr />
                    </div>*@
                <form asp-action="Edit" method="post">
                    <div class="row">
                        <input type="hidden" asp-for="RoleMappingId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger">

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FromRoleId"> </label>

                                <select asp-for="FromRoleId"
                                         class="form-control select" 
                                        asp-items="@(new SelectList(Model.FromRoleList,"RoleID", "RoleName"))">
                                </select>

                                <span asp-validation-for="FromRoleId" class="parsley-errors-list filled"></span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ToRoleId"> </label>

                                <select asp-for="ToRoleList" multiple
                                        class="form-control select"
                                        asp-items="@(new SelectList(ViewBag.ToRoleList,"RoleID", "RoleName"))">
                                </select>

                                <span asp-validation-for="ToRoleId" class="parsley-errors-list filled"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <input type="submit" asp-route-id="@Model.EncryptedId" class="btn btn-primary" value="Update" />
                            <a asp-action="Index" class="btn btn-success">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Conetnt End-->
