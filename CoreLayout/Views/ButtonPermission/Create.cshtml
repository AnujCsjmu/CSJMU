@model CoreLayout.Models.UserManagement.ButtonPermissionModel
@{
    ViewData["Title"] = "Create";
}

<body>
    <div style="padding: 30px 30px 30px 30px">
        <h4 class="text-info">Create ButtonPermission</h4>
        <form asp-action="Create" method="post" enctype="multipart/form-data" >
            <div class="pd-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Controller"> </label>
                    </div>
                    <div class="col-5">
                        <select asp-for="Controller"
                                class="form-control"
                                asp-items="@(new SelectList(ViewBag.ControllerList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="Controller" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Action"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Action" class="form-control" value="Index" readonly="readonly" />
                        <span asp-validation-for="Action" class="text-danger"></span>
                    </div>

                </div>
                @*<div class="form-group row">
            <div class="col-2">
                <label asp-for="URL"> </label>
            </div>
            <div class="col-5">
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>

        </div>*@

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ButtonId"> </label>
                    </div>
                    <div class="col-5">
                        <select asp-for="ButtonList" multiple
                                class="form-control"
                                asp-items="@(new SelectList(ViewBag.GetButtonList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="ButtonId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="RoleId"> </label>
                    </div>
                    <div class="col-5">
                        <select asp-for="RoleId"
                                class="form-control"
                                asp-items="@(new SelectList(ViewBag.RoleList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="UserId"> </label>
                    </div>
                    <div class="col-5">
                        <select asp-for="UserId"
                                class="form-control"
                                asp-items="@(new SelectList(string.Empty,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="IsRecordActive"> </label>
                    </div>
                    <div class="col-5">
                        @Html.DropDownList("IsRecordActive", new List<SelectListItem>
                        {
                             new SelectListItem{ Text="Active", Value = "1" },
                             new SelectListItem{ Text="InActive", Value = "0" },

                        },
                        new { @class = "form-control" })
                    </div>
                    <span asp-validation-for="IsRecordActive" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</body>
@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#RoleId").on("change", function () {

                $("#UserId").empty();

                var ddlsource = "#RoleId";
                var url = '@Url.Content("~/")' + "ButtonPermission/GetUser?RoleId="+$(ddlsource).val();

                $.getJSON(url, function (data) {
                var items = '';
                    $("#UserId").empty();
                    $.each(data, function (i, user) {
                        items += "<option value ='" + user.value + "'>" + user.text + "</option>";
                });
                    $('#UserId').html(items);
            });
            });
        });
    </script>
}







