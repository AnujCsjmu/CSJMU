@model CoreLayout.Models.UserManagement.ButtonPermissionModel
@{
    ViewData["Title"] = "Details";
}
<body >
    <div style="padding: 30px 30px 30px 30px">
        <h2 class="text-info">Button Permission Details</h2>
        <form asp-action="Details" method="post">
            <div class="pd-4 rounded border">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Controller"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Controller" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Controller" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Action"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Action" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Action" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="URL"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="URL" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="URL" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ButtonName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="ButtonName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="ButtonName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="RoleName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="RoleName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="UserName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="UserName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="IsRecordActive"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="IsRecordActive" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="IsRecordActive" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
    </body>

