@model CoreLayout.Models.UserManagement.ButtonPermissionModel
@{
    ViewData["Title"] = "Edit";
}
<!-- Page Header -->
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Edit Button Permission</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">ButtonPermission</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </div>

</div>
<!-- End Page Header -->
<!-- Conetnt Start-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                @*<div>
                        <h6 class="card-title mb-1">Edit State</h6>
                        <hr />
                    </div>*@
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="parsley-errors-list filled">

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Controller"> </label><span class="tx-danger"> *</span>

                                <select asp-for="Controller"
                                        class="form-control"
                                        asp-items="@(new SelectList(ViewBag.ControllerList,"Value", "Text"))">
                                </select>
                                <span asp-validation-for="Controller" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Action"> </label><span class="tx-danger"> *</span>

                                <input asp-for="Action" class="form-control" readonly />
                                <span asp-validation-for="Action" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        @*<div class="form-group row">
                                <div class="col-2">
                                    <label asp-for="URL"> </label>
                                </div>
                                <div class="col-5">
                                    <input asp-for="URL" class="form-control" />
                                    <span asp-validation-for="URL" class="text-danger"></span>
                                </div>

                            </div>*@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ButtonId"> </label><span class="tx-danger"> *</span>

                                <select asp-for="ButtonList"
                                        style="width:545px" class="select"
                                        asp-items="@(new SelectList(ViewBag.GetButtonList,"Value", "Text"))">
                                </select>
                                <span asp-validation-for="ButtonId" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RoleId"> </label><span class="tx-danger"> *</span>
                                <select asp-for="RoleId"
                                        style="width:545px" class="select"
                                        asp-items="@(new SelectList(ViewBag.RoleList,"Value", "Text"))">
                                </select>
                                <span asp-validation-for="RoleId" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="UserId"> </label><span class="tx-danger"> *</span>

                                <select asp-for="UserId"
                                        style="width:545px" class="select"
                                        asp-items="@(new SelectList(ViewBag.GetUserList,"Value", "Text"))">
                                </select>
                                <span asp-validation-for="UserId" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IsRecordActive"> </label><span class="tx-danger"> *</span>
                                @Html.DropDownList("IsRecordActive", new List<SelectListItem>
                                {
                                     new SelectListItem{ Text="Active", Value = "1", Selected=true },
                                     new SelectListItem{ Text="InActive", Value = "0" },

                                },
                                new { @class = "form-control" })
                                <span asp-validation-for="IsRecordActive" class="parsley-errors-list filled"></span>
                            </div>

                        </div>

                        <div class="form-group">
                            <input type="submit" asp-route-id="@Model.Id" class="btn btn-primary" value="Update" />
                            <a asp-action="Index" class="btn btn-success">Back to List</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#RoleId").on("change", function () {

                $("#UserId").empty();

                var ddlsource = "#RoleId";
                var url = '@Url.Content("~/")' + "ButtonPermission/GetUser?RoleId="+$(ddlsource).val();

                $.getJSON(url, function (data) {
                var items = '';
                    $("#UserId").empty();
                    $.each(data, function (i, user) {
                        items += "<option value ='" + user.value + "'>" + user.text + "</option>";
                });
                    $('#UserId').html(items);
            });
            });
        });
    </script>
}
