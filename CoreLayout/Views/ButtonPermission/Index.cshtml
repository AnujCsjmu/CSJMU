@using CoreLayout.Models.UserManagement
@model IEnumerable<ButtonPermissionModel>
@{
    ViewData["title"] = "Index";
}

<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Button Permission List</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">ButtonPermission</a></li>
            <li class="breadcrumb-item active" aria-current="page">List</li>
        </ol>
    </div>
    <div class="btn btn-list">
        <a asp-action="Create" class="btn ripple btn-success btn-sm"><i class="fe fe-plus"></i>&nbsp;New Button Permission</a>
    </div>
</div>

<!-- Row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card custom-card overflow-hidden">
            <div class="card-body">
                <div class="table-responsive-sm">

                    <table id="exportexample" class="table table-sm table-bordered key-buttons text-wrap w-100">
                        <thead>
                            <tr>

                                <th>S.No</th>
                                <th>
                                    @Html.DisplayNameFor(c => c.MenuName)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(c => c.Action)
                                    </th>*@
                                @*<th>
                                        @Html.DisplayNameFor(c => c.URL)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(c => c.RoleName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.UserName)
                                </th>

                                <th>
                                    Button Permission
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                int sno = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>
                                    <td>@item.MenuName</td>
                                    @*<td>@item.Action</td>*@
                                    @*<td>@item.URL</td>*@
                                    <td>@item.RoleName</td>
                                    <td>@item.UserName</td>
                                    <td>
                                        <table>

                                                @foreach (var item1 in item.ButtonModelList)
                                                {
                                                    <tr style="display:inline-block">
                                                        <td>
                                                            &nbsp;&nbsp;@item1.ButtonName
                                                            <label class="switch">
                                                                <input type="checkbox" @item1.isChecked>
                                                                <span class="slider round"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                }
                                            </table>
                                    </td>
                                    <td>
                                        <div class="table-actions text-center">
                                            <a asp-action="Edit" id="edit" asp-route-id=@item.Id data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="Edit"><i class="fe fe-edit fs-16 mr-30 text-success"></i></a>
                                            <a asp-action="Details" id="details" asp-route-id=@item.Id data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="View"><i class="fe fe-eye fs-16 mr-30 text-warning"></i></a>
                                            <a asp-action="Delete" id="delete" asp-route-id=@item.Id data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="Delete" onclick="return confirm('Are you sure you want to delete this?')"><i class="fe fe-trash fs-16 text-danger"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row -->

@section Scripts{

    <script type="text/javascript">
        function showMsg(msg, controller) {
            mscConfirm(msg, function () {
                window.location.href = 'Students/' + controller;
            });
        }


    </script>
    <script src="~/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.bootstrap5.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/js/table-data.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/assets/plugins/datatable/pdfmake/pdfmake.min.js"></script>
    <script src="~/assets/plugins/datatable/pdfmake/vfs_fonts.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.print.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.colVis.min.js"></script>
    <script src="~/assets/plugins/datatable/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/datatable/responsive.bootstrap5.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            $("#RoleId").on("change", function () {

                $("#UserId").empty();

                var ddlsource = "#RoleId";
                var url = '@Url.Content("~/")' + "ButtonPermission/GetUser?RoleId="+$(ddlsource).val();

                $.getJSON(url, function (data) {
                var items = '';
                    $("#UserId").empty();
                    $.each(data, function (i, user) {
                        items += "<option value ='" + user.value + "'>" + user.text + "</option>";
                });
                    $('#UserId').html(items);
            });
            });
        });
</script>
}



