                        </tr>
                    </thead>
                    <tfoot>
                        <tr>

                            <th>S.No</th>
                            <th>
                                @Html.DisplayNameFor(c => c.Controller)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.Action)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(c => c.URL)
                                </th>*@
