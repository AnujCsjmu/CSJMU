@model CoreLayout.Models.Masters.StateModel
@{
    ViewData["Title"] = "Edit";
}

<div class="main-content side-content pt-0">
    <div class="side-app">
        <div class="main-container container-fluid">
            <!-- Page Header -->
            <div class="page-header">
                <div>
                    <h2 class="main-content-title tx-24 mg-b-5">Edit State</h2>
                    <hr />
                </div>
            </div>
            <!-- End Page Header -->
            <!-- Conetnt Start-->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card custom-card">
                        <div class="card-body">
                            <div>
                                <h6 class="card-title mb-1">Edit State</h6>
                                <hr />
                            </div>

                            <form asp-action="Edit" method="post">
                                <div class="row">
                                    <input type="hidden" asp-for="StateId" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger">

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CountryId" class="mg-b-10"> </label>
                                            <select class="form-control" asp-for="CountryId" asp-items="@(new SelectList(Model.CountryList,"CountryId","CountryName"))">
                                                <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                            </select>
                                            <span asp-validation-for="CountryId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="StateName" class="mg-b-10"> </label>
                                            <input asp-for="StateName" class="form-control" />
                                            <span asp-validation-for="StateName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" asp-route-id="@Model.EncryptedId" class="btn btn-primary" value="Update" />
                                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Conetnt End-->

        </div>
    </div>
</div>
