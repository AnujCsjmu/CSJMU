@using CoreLayout.Models.Masters
@model IEnumerable<BranchModel>
@{
    ViewData["title"] = "Index";
}

<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Branch Master List</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Branch</a></li>
            <li class="breadcrumb-item active" aria-current="page">List</li>
        </ol>
    </div>
    <div class="btn btn-list">
        <a class="btn ripple btn-success btn-sm" asp-action="Create" asp-route-id=@ViewBag.MaxBranchId><i class="fe fe-plus"></i> Add New</a>
    </div>
</div>

<!-- Row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card custom-card overflow-hidden">
            <div class="card-body">
                <div class="table-responsive-sm">
                    <table id="exportexample" class="table table-sm table-bordered key-buttons text-wrap w-100">
                        <thead>
                            <tr>
                                <th>S.No</th>
                                <th>
                                    @Html.DisplayNameFor(c => c.BranchCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.BranchName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.SubjectType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.Duration)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.HindiName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.CerificateName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.DisplayName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.CreatedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.CreatedDate)
                                </th>

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @{ sno++; }
                                    @sno
                                </td>
                                <td>@item.BranchCode</td>
                                <td>@item.BranchName</td>
                                <td>@item.SubjectType</td>
                                <td>@item.Duration</td>
                                <td>@item.HindiName</td>
                                <td>@item.CerificateName</td>
                                <td>@item.DisplayName</td>
                                <td>@item.CreatedBy</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <div class="table-actions text-center">
                                        <a asp-action="Edit" id="edit" asp-route-id=@item.EncryptedId data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="Edit"><i class="fe fe-edit fs-16 mr-30 text-success"></i></a>
                                        <a asp-action="Details" id="details" asp-route-id=@item.EncryptedId data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="View"><i class="fe fe-eye fs-16 mr-30 text-warning"></i></a>
                                        <a asp-action="Delete" id="delete" asp-route-id=@item.EncryptedId data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="Delete" onclick="return confirm('Are you sure you want to delete this?')"><i class="fe fe-trash fs-16 text-danger"></i></a>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row -->

@section Scripts{
    <script type="text/javascript">
        function showMsg(msg, controller, itemid) {
            mscConfirm(msg, function () {
                window.location.href = 'State/' + controller + '?StateId=' + itemid;
            });
        }
    </script>


    <!-- Datatable js-->
    <script src="~/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.bootstrap5.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/js/table-data.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/assets/plugins/datatable/pdfmake/pdfmake.min.js"></script>
    <script src="~/assets/plugins/datatable/pdfmake/vfs_fonts.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.print.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.colVis.min.js"></script>
    <script src="~/assets/plugins/datatable/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/datatable/responsive.bootstrap5.min.js"></script>
}