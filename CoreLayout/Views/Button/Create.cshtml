@model CoreLayout.Models.Masters.ButtonModel
@{
    ViewData["Title"] = "Create";
}
<!-- Main Content-->


        <div class="main-container container-fluid">


            <!-- Page Header -->
            <div class="page-header">
                <div>
                    <h2 class="main-content-title tx-24 mg-b-5">Create Button</h2>
                    <hr />
                </div>

            </div>
            <!-- End Page Header -->
            <!-- Conetnt Start-->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card custom-card">
                        <div class="card-body">
                            <div>
                                <h6 class="card-title mb-1">Create Button</h6>
                                <hr />
                            </div>


                            <form asp-action="Create" method="post">
                                <div class="pd-4 rounded border">
                                    <div asp-validation-summary="ModelOnly" class="text-danger">

                                    </div>
                                    <div class="form-group row">
                                        <div class="col-2">
                                            <label asp-for="ButtonName"> </label>
                                        </div>
                                        <div class="col-5">
                                            <input asp-for="ButtonName" class="form-control" />
                                            <span asp-validation-for="ButtonName" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary" value="Save" />
                                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Conetnt End-->

        </div>
    

<!-- End Main Content -->
