@model CoreLayout.Models.WRN.WRNRegistrationModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutWRN.cshtml";
}
<!-- partial -->
<!-- Page Header -->
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Upload Photo & Signature</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">UploadPhotoSignature</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </div>

</div>
<!-- End Page Header -->
<!-- Conetnt Start-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">

                <form asp-action="UploadPhotoSignature" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="parsley-errors-list filled">

                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="RegistrationNo"> </label><span class="tx-danger"> *</span>
                                <input asp-for="RegistrationNo" class="form-control" readonly />
                                <span class="parsley-errors-list filled" asp-validation-for="RegistrationNo"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Photo"> </label><span class="tx-danger"> *</span>
                                <input asp-for="Photo" class="form-control" />
                                <span class="parsley-errors-list filled" asp-validation-for="Photo"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Signature"> </label><span class="tx-danger"> *</span>
                                <input asp-for="Signature" class="form-control" />
                                <span class="parsley-errors-list filled" asp-validation-for="Signature"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            @*@if (Model.FinalSubmit == false)
                            {*@
                                <input type="submit" class="btn btn-primary" value="Upload" />
                            @*}*@
                            <a asp-action="Dashboard" asp-controller="WRNDashboard" class="btn btn-success">Back to List</a>
                        </div>
                    </div>
                    @*<div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PhotoPath"> </label><span class="tx-danger"> *</span>
                                    <img src="~/WRNStudentPhoto/@Model.PhotoPath" alt="Image" height="120" width="120" />
                                    <span asp-validation-for="PhotoPath" class="parsley-errors-list filled"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="SignaturePath"> </label><span class="tx-danger"> *</span>
                                    <img src="~/WRNStudentSignature/@Model.SignaturePath" alt="Image" height="120" width="120" />
                                    <span asp-validation-for="SignaturePath" class="parsley-errors-list filled"></span>
                                </div>
                            </div>
                        </div>*@
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card custom-card overflow-hidden">
            <div class="card-body">
                <div class="table-responsive-sm">
                    <table id="exportexample" class="table table-sm table-bordered key-buttons text-wrap w-100">
                        <thead>
                            <tr>
                                <th>S.No</th>
                                <th>
                                    @Html.DisplayNameFor(c => c.RegistrationNo)
                                </th>
                                <th>
                                    Photo
                                </th>
                                <th>
                                    Photo Upload Date
                                </th>
                                <th>
                                    Signature
                                </th>
                                <th>
                                    Signature Upload Date
                                </th>
                                @*<th>
                                    Action
                                </th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }
                            @if (Model.WRNUploadDataList.Count == 0)
                            {
                                <tr>
                                    <td colspan="6" style="text-align:center">
                                        <span style="font-weight:bold;color:red">No Record Found</span>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model.WRNUploadDataList)
                                {
                                    <tr>
                                        <td>
                                            @{ sno++; }
                                            @sno
                                        </td>
                                        <td>@item.RegistrationNo</td>
                                        <td> 
                                        <img src="~/WRNStudentPhoto/@item.PhotoPath" alt="Image" height="120" width="120" />
                                        </td>
                                        <td>@item.PhotoDate</td>
                                        <td> 
                                        <img src="~/WRNStudentSignature/@item.SignaturePath" alt="Image" height="120" width="120" />
                                        </td>
                                        <td>@item.SignatureDate</td>
                                        <td>
                                            <!--<div class="table-actions text-center">-->
                                                @*<a href="javascript:void(0);" class="anchorDetail" data-id="@item.EncryptedId">Details</a>*@
                                                <!--@if (Model.FinalSubmit == false)
                                                {
                                                    <a asp-action="UploadphotoDelete" id="delete" asp-route-id=@item.EncryptedId data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="Delete" onclick="return confirm('Are you sure you want to delete this?')"><i class="fe fe-trash fs-16 text-danger"></i></a>
                                                }
                                            </div>-->
                                        </td>
                                    </tr>

                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
