    @*hide/show other university input on university select*@

    <script type="text/javascript">
        $(document).ready(function () {
            $("#BoardUniversityId").on("change", function () {
                var BoardUniversityId = $('#BoardUniversityId').val();
                if (BoardUniversityId == 236 || BoardUniversityId == 1225) {
                    $('#divOtherUniversity').css('visibility', 'visible');
                }
                else {
                    $('#divOtherUniversity').css('visibility', 'hidden');
                    $('#OtherUniversity').val('');

                }
            });
        });
    </script>
    @*hide/show many input field from result status*@
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ResultStatus").on("change", function () {
                var ResultStatus = $('#ResultStatus').val();
                if (ResultStatus == "PASSED") {
                    $('#divPassingYear').css('visibility', 'visible');
                    $('#divPassingMonth').css('visibility', 'visible');
                    $('#divPercentagOfMarksObtained').css('visibility', 'visible');
                    $('#divDivisionClassGrade').css('visibility', 'visible');
                    $('#divSubjects').css('visibility', 'visible');
                    $('#divMarksCriteria').css('visibility', 'visible');
                    $('#divMarksheetAttachment').css('visibility', 'visible');
                }
                else {
                    $('#divPassingYear').css('visibility', 'hidden');
                    $('#divPassingMonth').css('visibility', 'hidden');
                    $('#divPercentagOfMarksObtained').css('visibility', 'hidden');
                    $('#divDivisionClassGrade').css('visibility', 'hidden');
                    $('#divSubjects').css('visibility', 'hidden');
                    $('#divMarksCriteria').css('visibility', 'hidden');
                    $('#divMarksheetAttachment').css('visibility', 'hidden');

                    $('#PassingYear').val('');
                    $('#PassingMonth').val('');
                    $('#PercentagOfMarksObtained').val('');
                    $('#DivisionClassGrade').val('');
                    $('#Subjects').val('');
                    $('#MarksCriteria').val('');
                    $('#MarksheetAttachment').val('');
                }
            });
        });
    </script>

    @*bind board/university on base of type*@

    <script type="text/javascript">
            $(document).ready(function () {
                $("#QualificationType").on("change", function () {
                    $("#BoardUniversityId").empty();
                    var ddlsource = "#QualificationType";
                    var url = '@Url.Content("~/")' + "WRNQualification/GetUniversity?QualificationType="+$(ddlsource).val();

                    $.getJSON(url, function (data) {
                    var items = '';
                        $.each(data, function (i, university) {
                            items += "<option value ='" + university.value + "'>" + university.text + "</option>";
                    });
                        $('#BoardUniversityId').html(items);
                });
                });
            });

    </script>
    @*popup*@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        var TeamDetailPostBackURL = '/WRNQualification/qualificationList';
        $(function () {
            $(".anchorDetail").click(function () {
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                $.ajax({
                    type: "GET",
                    url: TeamDetailPostBackURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        console.log(data)
                        $('#myModalContent').html(data);
                        $('#myModal').modal('show');
                    },
                    error: function (error) {
                        console.log(error)
                        alert("Dynamic content load failed.");
                    }
                });
            });
        });

    </script>
}






