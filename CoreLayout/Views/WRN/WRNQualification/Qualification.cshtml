@model CoreLayout.Models.WRN.WRNQualificationModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutWRN.cshtml";
}
<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <div>
                <h2 class="main-content-title tx-24 mg-b-5">Add Qualification</h2>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Qualification</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Index</li>
                </ol>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card custom-card">
                    <div class="card-body">

                        <form asp-action="Qualification" method="post" id="formid" enctype="multipart/form-data">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="parsley-errors-list filled">

                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="QualificationId"> </label><span class="tx-danger"> *</span>
                                        <select class="form-control select" asp-for="QualificationId" asp-items="@(new SelectList(Model.EducationalQualificationList, "Id", "Qualification"))">
                                            <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                        </select>
                                        <span class="parsley-errors-list filled" asp-validation-for="QualificationId"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="QualificationType"> </label><span class="tx-danger"> *</span>
                                        <select class="form-control" asp-for="QualificationType" asp-items="@(new SelectList(Model.BoardUniversityTypeList, "Type", "Type"))">
                                            <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                        </select>
                                        <span class="parsley-errors-list filled" asp-validation-for="QualificationType"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="BoardUniversityId"> </label><span class="tx-danger"> *</span>
                                        <select class="form-control select2" asp-for="BoardUniversityId" asp-items="@(new SelectList(string.Empty, "Id", "University"))">
                                            <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                        </select>
                                        <span class="parsley-errors-list filled" asp-validation-for="BoardUniversityId"></span>
                                        <div id="divOtherUniversity" style="visibility:hidden">
                                            <input asp-for="OtherUniversity" name="OtherUniversity" class="form-control" type="text" placeholder="OTHER UNIVERSITY NAME" />
                                            <span class="parsley-errors-list filled" asp-validation-for="OtherUniversity" id="OtherUniversityValidation"></span>
                                        </div>
                                    </div>
                                </div>
                                @*<div class="col-md-4" id="divOtherUniversity" style="visibility:hidden">
                                        <div class="form-group">
                                            <label asp-for="OtherUniversity"> </label><span class="tx-danger"> *</span>
                                            <input asp-for="OtherUniversity" class="form-control" type="text" />
                                            <span class="error" asp-validation-for="OtherUniversity"></span>
                                        </div>
                                    </div>*@
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="ResultStatus"> </label><span class="tx-danger"> *</span>
                                        <select class="form-control" asp-for="ResultStatus">
                                            <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                            <option value="PASSED">PASSED</option>
                                            <option value="APPEARED">APPEARED</option>
                                        </select>
                                        <span class="parsley-errors-list filled" asp-validation-for="ResultStatus"></span>
                                    </div>
                                </div>
                                <div class="col-md-3" id="divPassingYear">
                                    <div class="form-group">
                                        <label asp-for="PassingYear"> </label><span class="tx-danger"> *</span>
                                        <select class="form-control" asp-for="PassingYear" asp-items="@(new SelectList(Model.PassingYearList))">
                                            <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                        </select>
                                        <span class="parsley-errors-list filled" asp-validation-for="PassingYear"></span>
                                    </div>
                                </div>
                                <div class="col-md-3" id="divPassingMonth">
                                    <div class="form-group">
                                        <label asp-for="PassingMonth"> </label><span class="tx-danger"> *</span>
                                        <select class="form-control" asp-for="PassingMonth" asp-items="@(new SelectList(Model.PassingMonthList))">
                                            <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                        </select>
                                        <span class="parsley-errors-list filled" asp-validation-for="PassingMonth"></span>
                                    </div>
                                </div>
                                <div class="col-md-3" id="divMarksCriteria">
                                    <div class="form-group">
                                        <label asp-for="MarksCriteria"> </label><span class="tx-danger"> *</span>
                                        <select class="form-control" asp-for="MarksCriteria">
                                            <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                            <option value="PERCENTAGE">PERCENTAGE</option>
                                            <option value="GRADE">GRADE</option>
                                        </select>
                                        <span class="parsley-errors-list filled" asp-validation-for="MarksCriteria"></span>
                                    </div>
                                </div>
                                <div class="col-md-3" id="divPercentagOfMarksObtained">
                                    <div class="form-group">
                                        <label asp-for="PercentagOfMarksObtained"> </label><span class="tx-danger"> *</span>
                                        <input asp-for="PercentagOfMarksObtained" class="form-control" type="text" />
                                        <span class="parsley-errors-list filled" asp-validation-for="PercentagOfMarksObtained"></span>
                                    </div>
                                </div>
                                <div class="col-md-3" id="divDivisionClassGrade">
                                    <div class="form-group">
                                        <label asp-for="DivisionClassGrade"> </label><span class="tx-danger"> *</span>
                                        <input asp-for="DivisionClassGrade" class="form-control" onkeydown="upperCaseF(this)" />
                                        <span class="parsley-errors-list filled" asp-validation-for="DivisionClassGrade"></span>
                                    </div>
                                </div>

                                <div class="col-md-3" id="divSubjects">
                                    <div class="form-group">
                                        <label asp-for="Subjects"> </label><span class="tx-danger"> *</span>
                                        <input asp-for="Subjects" class="form-control" onkeydown="upperCaseF(this)" />
                                        <span class="parsley-errors-list filled" asp-validation-for="Subjects"></span>
                                    </div>
                                </div>
                                <div class="col-md-3" id="divMarksheetAttachment">
                                    <div class="form-group">
                                        <label asp-for="MarksheetAttachment"> </label><span class="tx-danger"> *</span>
                                        <input asp-for="MarksheetAttachment" class="form-control" />
                                        <span class="parsley-errors-list filled" asp-validation-for="MarksheetAttachment"></span>
                                    </div>
                                </div>
                                @*<div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="BoardUniversity"> </label><span class="tx-danger"> *</span>
                                            <input asp-for="BoardUniversity" class="form-control" onkeydown="upperCaseF(this)" />
                                            <span class="error" asp-validation-for="BoardUniversity"></span>
                                        </div>
                                    </div>*@
                                @*<div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="ResultCriteria"> </label><span class="tx-danger"> *</span>
                                            <input asp-for="ResultCriteria" class="form-control" />
                                            <span class="error" asp-validation-for="ResultCriteria"></span>
                                        </div>
                                    </div>*@
                                <div class="form-group">
                                    @if (Model.FinalSubmit == false)
                                    {
                                        <input type="submit" class="btn btn-primary" value="Add Qualification" />
                                    }
                                    <a asp-action="Dashboard" asp-controller="WRNDashboard" class="btn btn-success">Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card custom-card overflow-hidden">
                    <div class="card-body">
                        <div class="table-responsive-sm">
                            <table id="exportexample" class="table table-sm table-bordered key-buttons text-wrap w-100">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>
                                            @Html.DisplayNameFor(c => c.RegistrationNo)
                                        </th>
                                        <th>
                                            Qualification
                                        </th>
                                        <th>
                                            Board/ <br /> University
                                        </th>
                                        <th>
                                            Created Date
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int sno = 0;
                                    }
                                    @if (Model.DataList.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="6" style="text-align:center">
                                                <span style="font-weight:bold;color:red">No Record Found</span>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model.DataList)
                                        {
                                            <tr>
                                                <td>
                                                    @{ sno++; }
                                                    @sno
                                                </td>
                                                <td>@item.RegistrationNo</td>
                                                <td>@item.Qualification</td>
                                                <td>@item.University</td>
                                                <td>@item.CreatedDate</td>
                                                <td>
                                                    <div class="table-actions text-center">
                                                        <a href="javascript:void(0);" class="anchorDetail" data-id="@item.EncryptedId">Details</a>
                                                        @if (Model.FinalSubmit == false)
                                                        {
                                                            <a asp-action="Delete" id="delete" asp-route-id=@item.EncryptedId data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="Delete" onclick="return confirm('Are you sure you want to delete this?')"><i class="fe fe-trash fs-16 text-danger"></i></a>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id='myModal' class='modal fade bs-example-modal-lg' tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
