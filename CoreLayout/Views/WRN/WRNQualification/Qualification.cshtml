@*bind board/university on base of type*@

<script type="text/javascript">
            $(document).ready(function () {
                $("#QualificationType").on("change", function () {
                    $("#BoardUniversityId").empty();
                    var ddlsource = "#QualificationType";
                    var url = '@Url.Content("~/")' + "WRNQualification/GetUniversity?QualificationType="+$(ddlsource).val();

                    $.getJSON(url, function (data) {
                    var items = '';
                        $.each(data, function (i, university) {
                            items += "<option value ='" + university.value + "'>" + university.text + "</option>";
                    });
                        $('#BoardUniversityId').html(items);
                });
                });
            });

</script>





