@model CoreLayout.Models.Masters.RoleModel
@{
    ViewData["Title"] = "Edit";
}
<!-- Page Header -->
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Edit Role</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Role</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </div>

</div>
<!-- End Page Header -->
<!-- Conetnt Start-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                @*<div>
                        <h6 class="card-title mb-1">Edit State</h6>
                        <hr />
                    </div>*@
                <form asp-action="Edit" method="post">
                    <div class="row">
                        <input type="hidden" asp-for="RoleID" />
                        <div asp-validation-summary="ModelOnly" class="parsley-errors-list filled">

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RoleName"> </label><span class="tx-danger"> *</span>

                                <input asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="parsley-errors-list filled"></span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description"> </label><span class="tx-danger"> *</span>
                            
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="parsley-errors-list filled"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <input type="submit" asp-route-id="@Model.EncryptedId" class="btn btn-primary" value="Update" />
                            <a asp-action="Index" class="btn btn-success">Back to List</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- Conetnt End-->