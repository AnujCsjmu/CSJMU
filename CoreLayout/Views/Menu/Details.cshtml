@model CoreLayout.Models.UserManagement.MenuModel
@{
    ViewData["Title"] = "Details";
}
<!-- Page Header -->
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Menu Details</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Menu</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </div>
</div>
<!-- End Page Header -->
<!-- Conetnt Start-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                @*<div>
                        <h6 class="card-title mb-1">State Details</h6>
                        <hr />
                    </div>*@
                <form asp-action="Details" method="post">
                    <div class="row">
                        <input type="hidden" asp-for="MenuID" />
                        <div asp-validation-summary="ModelOnly" class="parsley-errors-list filled">

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ParentMenuId"> </label><span class="tx-danger"> *</span>
                                <input asp-for="ParentMenuName" class="form-control" readonly="readonly" />
                                <span asp-validation-for="ParentMenuId" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SubMenuId"> </label><span class="tx-danger"> *</span>
                                <input asp-for="SubMenuName" class="form-control" readonly="readonly" />
                                <span asp-validation-for="SubMenuId" class="parsley-errors-list filled"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MenuName"> </label><span class="tx-danger"> *</span>
                                <input asp-for="MenuName" class="form-control" readonly="readonly" />
                                <span asp-validation-for="MenuName" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Controller"> </label><span class="tx-danger"> *</span>
                                <input asp-for="Controller" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Controller" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Action"> </label><span class="tx-danger"> *</span>
                                <input asp-for="Action" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Action" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Active"> </label><span class="tx-danger"> *</span>
                                <input asp-for="Active" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Active" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <a asp-action="Edit" asp-route-id="@Model.EncryptedId" class="btn btn-primary">Edit</a>
                            <a asp-action="Index" class="btn btn-success">Back to List</a>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
<!-- Conetnt End-->
