@model CoreLayout.Models.UserManagement.MenuModel
@{
    ViewData["Title"] = "Details";
}
<div class="main-content side-content pt-0">
    <div class="side-app">

        <div class="main-container container-fluid">


            <!-- Page Header -->
            <div class="page-header">
                <div>
                    <h2 class="main-content-title tx-24 mg-b-5">Menu Details</h2>
                    <hr />
                </div>

            </div>
            <!-- End Page Header -->
            <!-- Conetnt Start-->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card custom-card">
                        <div class="card-body">
                            <div>
                                <h6 class="card-title mb-1">Menu Details</h6>
                                <hr />
                            </div>



                            <form asp-action="Details" method="post">
                                <div class="row">
                                    <input type="hidden" asp-for="MenuID" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger">

                                    </div>


                                    <div class="col-md-6">
                                        <div>
                                            <label asp-for="ParentMenuId" class="mg-b-10"> </label>
                                            <input asp-for="ParentMenuName" class="form-control" readonly="readonly" />
                                            <span asp-validation-for="ParentMenuId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div>
                                            <label asp-for="SubMenuId" class="mg-b-10"> </label>
                                            <input asp-for="SubMenuName" class="form-control" readonly="readonly" />
                                            <span asp-validation-for="SubMenuId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="MenuName" class="mg-b-10"> </label>
                                            <input asp-for="MenuName" class="form-control" readonly="readonly"/>
                                            <span asp-validation-for="MenuName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Controller" class="mg-b-10"> </label>
                                            <input asp-for="Controller" class="form-control" readonly="readonly"/>
                                            <span asp-validation-for="Controller" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Action" class="mg-b-10"> </label>
                                            <input asp-for="Action" class="form-control" readonly="readonly" />
                                            <span asp-validation-for="Action" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Active" class="mg-b-10"> </label>
                                            <input asp-for="Active" class="form-control" readonly="readonly" />
                                            <span asp-validation-for="Active" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <a asp-action="Edit" asp-route-id="@Model.EncryptedId" class="btn btn-primary">Edit</a>
                                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Conetnt End-->

        </div>
    </div>
</div>

