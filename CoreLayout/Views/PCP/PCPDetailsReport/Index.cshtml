@using CoreLayout.Models.PCP
@model IEnumerable<PCPDetailsReportModel>
@{
    ViewData["title"] = "Index";
}
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Summary Details Report</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Summary</a></li>
            <li class="breadcrumb-item active" aria-current="page">List</li>
        </ol>
    </div>
</div>

<!-- Row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card custom-card overflow-hidden">
            <div class="card-body">
                <div class="table-responsive-sm">
                    <table id="exportexample" class="table table-sm table-bordered key-buttons text-wrap w-100">
                        <thead>
                            <tr>
                                <th>S.No</th>

                                <th>
                                    @Html.DisplayNameFor(c => c.ExamName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.CourseName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.SubjectName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.RegisterCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.AppovedCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.QPAssignedCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.UploadPaperCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.SendToPaperAgencyCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.AcceptPaperAgencyCount)
                                </th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><b>Total:-</b></td>
                                <td><a asp-action="ViewReminder1" asp-route-link="Registration" target="_blank" style="color:green; font-weight:bold"> @Model.Sum(i => i.RegisterCount) </a></td>
                                <td><a asp-action="ViewReminder1" asp-route-link="Approved" target="_blank" style="color: green; font-weight: bold"> @Model.Sum(i => i.AppovedCount) </a></td>
                                <td><a asp-action="ViewReminder1" asp-route-link="QPAssigned" target="_blank" style="color: green; font-weight: bold"> @Model.Sum(i => i.QPAssignedCount) </a></td>
                                <td><a asp-action="ViewReminder1" asp-route-link="PaperUpload" target="_blank" style="color: green; font-weight: bold "> @Model.Sum(i => i.UploadPaperCount) </a></td>
                                <td><a asp-action="ViewReminder1" asp-route-link="SendAgency" target="_blank" style="color: green; font-weight: bold"> @Model.Sum(i => i.SendToPaperAgencyCount) </a></td>
                                <td><a asp-action="ViewReminder1" asp-route-link="AcceptAgency" target="_blank" style="color: green; font-weight: bold"> @Model.Sum(i => i.AcceptPaperAgencyCount) </a></td>
                            </tr>
                            
                        </tfoot>
                        <tbody>
                            @{
                                int sno = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>
                                    <td>@item.ExamName</td>
                                    <td>@item.CourseName</td>
                                    <td>@item.SubjectName</td>
                                    <td> <a asp-action="ViewReminder" asp-route-link="Registration" asp-route-examId="@item.ExamId" asp-route-courseId="@item.CourseId" asp-route-subjectId="@item.SubjectId" target="_blank" style="color:blue; font-weight:bold"> @item.RegisterCount </a> </td>
                                    <td> <a asp-action="ViewReminder" asp-route-link="Approved" asp-route-examId="@item.ExamId" asp-route-courseId="@item.CourseId" asp-route-subjectId="@item.SubjectId" target="_blank"  style="color:blue; font-weight:bold"> @item.AppovedCount </a> </td>
                                    <td> <a asp-action="ViewReminder" asp-route-link="QPAssigned" asp-route-examId="@item.ExamId" asp-route-courseId="@item.CourseId" asp-route-subjectId="@item.SubjectId" target="_blank"  style="color:blue; font-weight:bold"> @item.QPAssignedCount </a> </td>
                                    <td> <a asp-action="ViewReminder" asp-route-link="PaperUpload" asp-route-examId="@item.ExamId" asp-route-courseId="@item.CourseId" asp-route-subjectId="@item.SubjectId" target="_blank"  style="color:blue; font-weight:bold"> @item.UploadPaperCount </a> </td>
                                    <td> <a asp-action="ViewReminder" asp-route-link="SendAgency" asp-route-examId="@item.ExamId" asp-route-courseId="@item.CourseId" asp-route-subjectId="@item.SubjectId" target="_blank"  style="color:blue; font-weight:bold"> @item.SendToPaperAgencyCount </a> </td>
                                    <td> <a asp-action="ViewReminder" asp-route-link="AcceptAgency" asp-route-examId="@item.ExamId" asp-route-courseId="@item.CourseId" asp-route-subjectId="@item.SubjectId" target="_blank"  style="color:blue; font-weight:bold"> @item.AcceptPaperAgencyCount </a> </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- End Row -->
@section Scripts{

    <script src="~/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.bootstrap5.js"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/js/table-data.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/assets/plugins/datatable/pdfmake/pdfmake.min.js"></script>
    <script src="~/assets/plugins/datatable/pdfmake/vfs_fonts.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.print.min.js"></script>
    <script src="~/assets/plugins/datatable/js/buttons.colVis.min.js"></script>
    <script src="~/assets/plugins/datatable/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/datatable/responsive.bootstrap5.min.js"></script>
}
