<head>

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
    <meta name="description" content="Chhatrapati Shahu Ji Maharaj University, Kanpur">
    <meta name="author" content="CSJMU Kanpur - PMU Team">
    <meta name="keywords" content="Chhatrapati Shahu Ji Maharaj University, Kanpur, CSJMU, csjmu">

    <!-- Favicon -->
    <link rel="icon" href="~/assets/img/brand/favicon.ico" type="image/x-icon" />

    <!-- Title -->
    <title>Chhatrapati Shahu Ji Maharaj University, Kanpur</title>

    <!---bootstrap css-->
    <link id="style" href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!---Falg-icons css-->
    <link href="../assets/plugins/flag-icon-css/css/flag-icon.min.css" rel="stylesheet">

    <!--- FONT-ICONS CSS -->
    <link href="~/assets/css/icons.css" rel="stylesheet">


    <!---Style css-->
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/assets/css/skins.css" rel="stylesheet">
    <link href="~/assets/css/dark-style.css" rel="stylesheet">
    <link href="~/assets/css/transparent-style.css" rel="stylesheet">
    <link href="~/assets/css/boxed.css" rel="stylesheet">




</head>
<body style="background: url(../Images/pgbg.jpg); background-size: cover; background-repeat: no-repeat; ">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                                <div class="card-body">
                                    <form method="post" asp-controller="PCPRegistration" asp-action="Registration">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for="UserName" type="text" placeholder="Enter your user name" />
                                                    <label asp-for="UserName">User Name</label>
                                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input class="form-control" asp-for="LoginID" type="text" placeholder="Enter your login id" />
                                                    <label asp-for="LoginID">Login Id</label>
                                                    <span class="text-danger" asp-validation-for="LoginID"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="MobileNo" type="number" placeholder="Enter your mobile number" />
                                            <label asp-for="MobileNo">Mobile Number</label>
                                            <span class="text-danger" asp-validation-for="MobileNo"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="EmailID" type="email" placeholder="name@example.com" />
                                            <label asp-for="EmailID">Email address</label>
                                            <span class="text-danger" asp-validation-for="EmailID"></span>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for="Password" type="password" placeholder="Create a password" />
                                                    <label asp-for="Password">Password</label>
                                                    <span class="text-danger" asp-validation-for="Password"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
                                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <!--<div class="form-floating mb-6">

                                        <select class="form-control select" asp-for="QPId" asp-items="@(new SelectList(Model.QPCodeList,"QPId","QPCode"))">
                                            <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                        </select>-->
                                        @*<label asp-for="QPCode">Role</label>*@
                                        <!--<span class="text-danger" asp-validation-for="QPId"></span>
                                        </div>-->
                                        <div class="form-floating mb-6">

                                            <select class="form-control select" asp-for="CourseID" asp-items="@(new SelectList(Model.CourseList,"CourseID","CourseName"))">
                                                <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                            </select>
                                            @*<label asp-for="QPCode">Role</label>*@
                                            <span class="text-danger" asp-validation-for="CourseID"></span>
                                        </div>
                                        <br />
                                        <div class="form-floating mb-6">

                                            <select class="form-control select" asp-for="BranchID" asp-items="@(new SelectList(Model.BranchList,"BranchID","BranchName"))">
                                                <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                            </select>
                                            @*<label asp-for="QPCode">Role</label>*@
                                            <span class="text-danger" asp-validation-for="BranchID"></span>
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                @*<a class="btn btn-primary btn-block" href="login.html">Create Account</a>*@
                                                <input class="btn btn-primary btn-block" type="submit" value="Create Account" />
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            @if (ViewBag.errormsg != null && ViewBag.errormsg != "")
                                            {
                                                <span class="text-danger">@ViewBag.errormsg</span>
                                            }

                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a asp-action="Login" asp-controller="Home">Have an account? Go to login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
