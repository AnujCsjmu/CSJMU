        need to be included-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css" />
    <script>
        $(document).ready(function () {
            //Select2
            $(".select").select2({
                maximumSelectionLength: 2,
            });
            //Chosen
            $(".select1").chosen({
                max_selected_options: 2,
            });
        });
    </script>

    @*upper case*@
    <script type="text/javascript">
        function upperCaseF(a) {
            setTimeout(function () {
                a.value = a.value.toUpperCase();
            }, 1);
        }
    </script>

    @*bind branch on selected value of course*@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#CourseID").on("change", function () {
                $("#BranchId").empty();
                var ddlsource = "#CourseID";
                var url = '@Url.Content("~/")' + "PCPRegistration/GetBranch?CourseId="+$(ddlsource).val();

                $.getJSON(url, function (data) {
                var items = '';

                    $.each(data, function (i, branch) {
                        items += "<option value ='" + branch.value + "'>" + branch.text + "</option>";
                });
                    $('#BranchId').html(items);
            });
            });
        });

    </script>

</body>
