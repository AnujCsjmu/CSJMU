                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="QPId"> </label><span class="tx-danger"> *</span>
                                <select class="form-control select" asp-for="QPId" asp-items="@(new SelectList(string.Empty,"QPId","QPName"))">
                                    <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                </select>
                                <span asp-validation-for="QPId" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PaperType" class="mg-b-10"> </label><span class="tx-danger"> *</span>
                                @Html.DropDownList("PaperType", new List<SelectListItem>
                                {
                                 new SelectListItem{ Text="----Select----", Value = string.Empty },
                                 new SelectListItem{ Text="Objective", Value = "Objective" },
                                 new SelectListItem{ Text="Subjective", Value = "Subjective" },
                                },
                                new { @class = "form-control" })
                                <span asp-validation-for="PaperType" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FUOldPape"> </label><span class="tx-danger"> *</span>
                                <input asp-for="FUOldPape" class="form-control" />
                                <label style="font-size:10px; color:red; font-weight:bold">Only pdf/jpg/jpeg/png</label>
                                <span id="uservalidation" asp-validation-for="FUOldPape" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FUOldSyllabus"> </label><span class="tx-danger"> *</span>
                                <input asp-for="FUOldSyllabus" class="form-control" />
                                <label style="font-size:10px; color:red; font-weight:bold">Only pdf/jpg/jpeg/png</label>
                                <span id="uservalidation" asp-validation-for="FUOldSyllabus" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FUOldPattern"> </label><span class="tx-danger"> *</span>
                                <input asp-for="FUOldPattern" class="form-control" />
                                <label style="font-size:10px; color:red; font-weight:bold">Only pdf/jpg/jpeg/png</label>
                                <span id="uservalidation" asp-validation-for="FUOldPattern" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FUCertificate"> </label>
                                <input asp-for="FUCertificate" class="form-control" />
                                <label style="font-size:10px; color:red; font-weight:bold">Only pdf/jpg/jpeg/png</label>
                                <span id="uservalidation" asp-validation-for="FUCertificate" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input id="btnSubtmit" type="submit" class="btn btn-primary" value="Save" />
                        <a asp-action="Index" class="btn btn-success">Back to List</a>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<!-- Conetnt End-->
@section Scripts{

    @*bind course in exam selected*@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $("#ExamId").on("change", function () {
                    $("#CourseId").empty();
                    var ddlsource = "#ExamId";
                    var url = '@Url.Content("~/")' + "PCPAssignedQP/GetCourse?ExamId="+$(ddlsource).val();

                    $.getJSON(url, function (data) {
                    var items = '';
                        $("#CourseId").empty();
                        $.each(data, function (i, course) {
                            items += "<option value ='" + course.value + "'>" + course.text + "</option>";
                    });
                        $('#CourseId').html(items);
                });
                });
            });

    </script>

