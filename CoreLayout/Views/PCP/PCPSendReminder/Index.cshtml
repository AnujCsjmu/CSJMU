@using CoreLayout.Models.PCP
@model IEnumerable<PCPRegistrationModel>
@{
    ViewData["title"] = "Index";
}


<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Send Reminder List</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">SendReminder</a></li>
            <li class="breadcrumb-item active" aria-current="page">List</li>
        </ol>
    </div>
    @*<div class="btn btn-list">
            <a class="btn ripple btn-success btn-sm" asp-action="Create" asp-route-id=@ViewBag.MaxRoleId><i class="fe fe-plus"></i> Add New</a>
        </div>*@
</div>

<!-- Row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card custom-card overflow-hidden">
            <div class="card-body">
                <div class="table-responsive-sm">
                    <table id="exportexample" class="table table-sm table-bordered key-buttons text-wrap w-100">
                        <thead>
                            <tr>
                                <th></th>
                                <th>S.No</th>
                                <th>
                                    @Html.DisplayNameFor(c => c.UserName)
                                </th>

                                @*<th>
                                        @Html.DisplayNameFor(c => c.MobileNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(c => c.EmailID)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(c => c.InstituteCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.BranchCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.CourseCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.QPCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(c => c.PaperPath)
                                </th>



                            </tr>
                        </thead>

                        <tbody>
                            @{
                                int sno = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" readonly="readonly" id="chkid" value="@item.PCPRegID" />
                                    </td>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>
                                    <td>@item.UserName</td>
                                    @*<td>@item.MobileNo</td>
                                        <td>@item.EmailID</td>*@
                                    <td>@item.InstituteCode</td>
                                    <td>@item.BranchName</td>
                                    <td>@item.CourseName</td>
                                    <td>@item.QPName</td>
                                    <td>

                                        @if (ViewBag.PaperUploadedlist != null)
                                        {
                                            <table class="table table-sm table-bordered key-buttons text-wrap w-100">
                                                <thead>
                                                    <tr>
                                                        @foreach (var item1 in ViewBag.PaperUploadedlist)
                                                        {
                                                            if (item.QPId == item1.QPId)
                                                            {
                                                                <th>S.No</th>
                                                                <th>
                                                                    @Html.DisplayNameFor(c => c.PaperCode)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(c => c.PaperName)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(c => c.PaperPassword)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(c => c.PaperPath)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(c => c.Session) <br /> @Html.DisplayNameFor(c => c.SessionType)
                                                                </th>
                                                                break;
                                                            }

                                                        }
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    @{
                                                        int sno1 = 0;
                                                    }
                                                    @foreach (var item1 in ViewBag.PaperUploadedlist)
                                                    {
                                                        if (item.QPId == item1.QPId)
                                                        {
                                                            <tr>

                                                                <td>
                                                                    @{ sno1++; }
                                                                    @sno1
                                                                </td>
                                                                <td>@item1.PaperCode</td>
                                                                <td>@item1.PaperName</td>
                                                                <td>@item1.PaperPassword</td>
                                                                <td>
                                                                    <img src="~/Images/pdfimage.png" height=50 width=50 /><br />
                                                                    <a asp-action="Download" asp-route-id="@item1.EncryptedId" target="_blank">Download</a>
                                                                </td>
                                                                <td>@item1.Session <br /> @item1.SessionType</td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        }

                                    </td>

                                    @*<td>@item.PaperCreatedBy</td>
                                        <td>@item.PaperCreatedDate</td>
                                        <td>@item.Session <br /> @item.SessionType</td>
                                        <td>@item.PaperPassword</td>*@

                                    <!--<td>
                                    <a asp-action="Details" id="details" asp-route-id=@item.EncryptedId data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="View Details"><i class="fe fe-eye fs-16 mr-30 text-warning"></i></a>-->
                                    @*<input type="button" id="btnAssignQP" name="AssignQP" value="AssignQP" class="btn btn-success" onclick="return confirm('Are you sure you want to assign QP?')" />*@
                                    <!--<a id="btnViewReminder" data-bs-toggle="tooltip" title="" data-bs-placement="top" data-bs-original-title="View Reminder" onclick="return confirm('Are you sure you want to view reminder?')"><i class="fe fe-eye fs-16 mr-30 text-warning"></i></a>-->
                                    @*<input type="button" id="btnViewReminder" name="ViewReminder" value="ViewReminder" class="btn btn-success" onclick="return confirm('Are you sure you want to view reminder?')" />*@
                                    <!--</td>-->
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <input type="button" id="btnReminder" name="Reminder" value="Send Reminder" class="btn btn-success" onclick="return confirm('Are you sure you want to send reminder?')" />
</div>
<!-- End Row -->

