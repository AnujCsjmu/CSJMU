@model CoreLayout.Models.UserManagement.AssignMenuByRoleModel
@{
    ViewData["Title"] = "Edit";
}
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">Edit AssignMenuByRole</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">AssignMenuByRole</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </div>

</div>
<!-- End Page Header -->
<!-- Conetnt Start-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                @*<div>
                        <h6 class="card-title mb-1">Edit State</h6>
                        <hr />
                    </div>*@

                <form asp-action="Edit" method="post">
                    <div class="row">
                        <input type="hidden" asp-for="MenuPermissionId" />
                        <div asp-validation-summary="ModelOnly" class="parsley-errors-list filled">

                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MenuId" class="mg-b-10"> </label><span class="tx-danger"> *</span>
                                <select class="form-control select" asp-for="MenuId" asp-items="@(new SelectList(Model.MenuList,"MenuID","MenuName"))">
                                    <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                </select>
                                <span asp-validation-for="MenuId" class="parsley-errors-list filled"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RoleId" class="mg-b-10"> </label><span class="tx-danger"> *</span>
                                <select class="form-control select" asp-for="RoleId" asp-items="@(new SelectList(Model.RoleList,"RoleID","RoleName"))">
                                    <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                </select>
                                <span asp-validation-for="RoleId" class="parsley-errors-list filled"></span>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Active" class="mg-b-10"> </label><span class="tx-danger"> *</span>
                                @Html.DropDownList("Active", new List<SelectListItem>
                                    {
                                     new SelectListItem{ Text="----Select----", Value = string.Empty },
                                     new SelectListItem{ Text="Active", Value = "1" },
                                     new SelectListItem{ Text="InActive", Value = "0" },
                                    },
                                     new { @class = "form-control" })
                                <span asp-validation-for="Active" class="parsley-errors-list filled"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <input type="submit" asp-route-id="@Model.EncryptedId" class="btn btn-primary" value="Update" />
                            <a asp-action="Index" class="btn btn-success">Back to List</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- Conetnt End-->