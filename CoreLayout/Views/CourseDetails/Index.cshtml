@using CoreLayout.Models.Masters
@model IEnumerable<CourseDetailsModel>
@{
    ViewData["title"] = "Index";
}
<body>
    <div style="padding: 30px 30px 30px 30px">
        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" asp-route-id=@ViewBag.MaxCourseDetailsId class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New CourseDetails</a>
            </div>
        </div>
        <br />

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                CourseDetails List
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>
                                @Html.DisplayNameFor(c => c.PramotionType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.CourseDurationType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.SessionId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.NumberOfYear)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.NumberOfSemester)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.ProcessGroupType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.CreatedBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.CreatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.ModifiedDate)
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>S.No</th>
                            <th>
                                @Html.DisplayNameFor(c => c.PramotionType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.CourseDurationType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.SessionId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.NumberOfYear)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.NumberOfSemester)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.ProcessGroupType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.CreatedBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.CreatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(c => c.ModifiedDate)
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{
                            int sno = 0;

                        }
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>@item.PramotionType</td>
                            <td>@item.CourseDurationType</td>
                            <td>@item.Session</td>
                            <td>@item.NumberOfYear</td>
                            <td>@item.NumberOfSemester</td>
                            <td>@item.ProcessGroupType</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.ModifiedDate</td>
                            <td>
                                <a asp-action="Edit" id="edit" class="btn btn-primary" asp-route-id=@item.EncryptedId><i class="far fa-edit"></i></a>
                                <a asp-action="Details" id="details" class="btn btn-success" asp-route-id=@item.EncryptedId><i class="fas fa-list"></i></a>
                                <a asp-action="Delete" id="delete" class="btn btn-danger" asp-route-id=@item.EncryptedId><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

