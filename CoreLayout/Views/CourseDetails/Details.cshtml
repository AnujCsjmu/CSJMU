@model CoreLayout.Models.Masters.CourseDetailsModel
@{
    ViewData["Title"] = "Details";
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">CourseDetails Details</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">CourseDetails</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </div>
</div>
<!-- End Page Header -->
<!-- Conetnt Start-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card custom-card">
            <div class="card-body">
                @*<div>
                        <h6 class="card-title mb-1">State Details</h6>
                        <hr />
                    </div>*@

                <form asp-action="Details" method="post">
                    <div class="row">
                        <input type="hidden" asp-for="CourseDetailId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger">

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CourseID" class="mg-b-10"> </label>
                                <input asp-for="CourseName" class="form-control" readonly="readonly" />
                                <span asp-validation-for="CourseID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PramotionType" class="mg-b-10"> </label>
                                <input asp-for="PramotionType" class="form-control" readonly="readonly" />
                                <span asp-validation-for="PramotionType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CourseDurationType" class="mg-b-10"> </label>
                                <input asp-for="CourseDurationType" class="form-control" readonly="readonly" />
                                <span asp-validation-for="CourseDurationType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SessionId" class="mg-b-10"> </label>
                                <input asp-for="Session" class="form-control" readonly="readonly" />
                                <span asp-validation-for="SessionId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NumberOfYear" class="mg-b-10"> </label>
                                <input asp-for="NumberOfYear" class="form-control" readonly="readonly" />
                                <span asp-validation-for="NumberOfYear" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NumberOfSemester" class="mg-b-10"> </label>
                                <input asp-for="NumberOfSemester" class="form-control" readonly="readonly" />
                                <span asp-validation-for="NumberOfSemester" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ProcessGroupType" class="mg-b-10"> </label>
                                <input asp-for="ProcessGroupType" class="form-control" readonly="readonly" />
                                <span asp-validation-for="ProcessGroupType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IsGrade" class="mg-b-10"> </label>
                                @Html.DropDownList("IsGrade", new List<SelectListItem>
                                {
                                 new SelectListItem{ Text="No", Value = "0" },
                                 new SelectListItem{ Text="Yes", Value = "1" },
                                },
                                new { @class = "form-control", @disabled = "disabled" })
                                <span asp-validation-for="IsGrade" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IsCreadit" class="mg-b-10"> </label>
                                @Html.DropDownList("IsCreadit", new List<SelectListItem>
                                {
                                 new SelectListItem{ Text="No", Value = "0" },
                                 new SelectListItem{ Text="Yes", Value = "1" },
                                },
                                new { @class = "form-control", @disabled = "disabled" })
                                <span asp-validation-for="IsCreadit" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <a asp-action="Edit" asp-route-id="@Model.EncryptedId" class="btn btn-primary">Edit</a>
                            <a asp-action="Index" class="btn btn-success">Back to List</a>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
<!-- Conetnt End-->
