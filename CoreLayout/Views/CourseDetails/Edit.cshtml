@model CoreLayout.Models.Masters.CourseDetailsModel
@{
    ViewData["Title"] = "Edit";
}

<div class="main-content side-content pt-0">
    <div class="side-app">
        <div class="main-container container-fluid">
            <!-- Page Header -->
            <div class="page-header">
                <div>
                    <h2 class="main-content-title tx-24 mg-b-5">Edit CourseDetail</h2>
                    <hr />
                </div>
            </div>
            <!-- End Page Header -->
            <!-- Conetnt Start-->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card custom-card">
                        <div class="card-body">
                            <div>
                                <h6 class="card-title mb-1">Edit CourseDetail</h6>
                                <hr />
                            </div>

                            <form asp-action="Edit" method="post">
                                <div class="row">
                                    <input type="hidden" asp-for="CourseDetailId" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger">

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PramotionType" class="mg-b-10"> </label>
                                            <input asp-for="PramotionType" class="form-control" />
                                            <span asp-validation-for="PramotionType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CourseDurationType" class="mg-b-10"> </label>
                                            <input asp-for="CourseDurationType" class="form-control" />
                                            <span asp-validation-for="CourseDurationType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="SessionId" class="mg-b-10"> </label>
                                            <select style="width:550px; height:120px" class="select" asp-for="SessionId" asp-items="@(new SelectList(Model.SessionList,"SessionId","Session"))">
                                                <option selected="selected" disabled="disabled" value="">--Select-- </option>
                                            </select>
                                            <span asp-validation-for="SessionId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="NumberOfYear" class="mg-b-10"> </label>
                                            <input asp-for="NumberOfYear" class="form-control" />
                                            <span asp-validation-for="NumberOfYear" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="NumberOfSemester" class="mg-b-10"> </label>
                                            <input asp-for="NumberOfSemester" class="form-control" />
                                            <span asp-validation-for="NumberOfSemester" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ProcessGroupType" class="mg-b-10"> </label>
                                            <input asp-for="ProcessGroupType" class="form-control" />
                                            <span asp-validation-for="ProcessGroupType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="IsGrade" class="mg-b-10"> </label>
                                            @Html.DropDownList("IsGrade", new List<SelectListItem>
                                            {
                                             new SelectListItem{ Text="No", Value = "0" },
                                             new SelectListItem{ Text="Yes", Value = "1" },
                                            },
                                            new { @class = "form-control" })
                                            <span asp-validation-for="IsGrade" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="IsCreadit" class="mg-b-10"> </label>
                                            @Html.DropDownList("IsCreadit", new List<SelectListItem>
                                            {
                                             new SelectListItem{ Text="No", Value = "0" },
                                             new SelectListItem{ Text="Yes", Value = "1" },
                                            },
                                            new { @class = "form-control" })
                                            <span asp-validation-for="IsCreadit" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" asp-route-id="@Model.EncryptedId" class="btn btn-primary" value="Update" />
                                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Conetnt End-->

        </div>
    </div>
</div>
